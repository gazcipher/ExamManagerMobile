<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamManagerMobile.Views.Menu.Dashboard">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand">

            <StackLayout x:Name="LogoStack">
                <Label x:Name="lbl_NoInternet" HorizontalTextAlignment="Center" TextColor="White" BackgroundColor="Red"/>
            </StackLayout>

            <Label Text="Welcome!" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" VerticalOptions="Center" HorizontalOptions="Center"/>
            <Button Text="Screen A" Clicked="SelectedScreenA" HorizontalOptions="Center" VerticalOptions="Center" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>